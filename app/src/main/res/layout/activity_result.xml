<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_result"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.cs399.tbgs.anagramz.ResultActivity"
android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anagramz"
        android:layout_marginTop="15dp"
        android:textSize="75sp"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:id="@+id/textTitle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="32dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:text="Found Words: "
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:id="@+id/CorrectTextView" />

        <TextView
            android:text="Incorrect Words: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:id="@+id/IncorrectTextView" />

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:id="@+id/RemainingTextView" />

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:id="@+id/MissedTextView" />

        <TextView
            android:text="Total Score: 20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:id="@+id/TotalTextView" />

        <Button
            android:text="Play Again!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/playagain"
            android:onClick="gotoChallenge"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>

</LinearLayout>